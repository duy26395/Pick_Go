<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anhsplash"
    tools:context="com.example.mypc.i_tour.Home.DetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#7f000000"
        android:id="@+id/line">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imgct"
            android:src="@mipmap/ic_launcher_round" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/btnsave"
                android:background="@drawable/btn_save"/>
            <com.facebook.share.widget.LikeView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/idlike"
                />
            <com.facebook.share.widget.ShareButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/idshare" />
            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                style= "@style/CustomRatingBar"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/idtext"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tenct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F2F2F2"
                android:text="ten dai diem"
                android:textSize="25dp" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="#F2F2F2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/motact"
                android:text="noi na co em la ngnfd jaskdf jasfdnasn"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/idcommit"
                android:layout_height="wrap_content"
                android:text="commit"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
