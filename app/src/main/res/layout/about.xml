<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/appicon"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="20dp"
        android:id="@+id/text1"
        android:text="Developer : Ahihi Team"
        android:textSize="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:id="@+id/text2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Fead Back"
        android:textSize="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:text="Name"
        android:id="@+id/text3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameabout"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/text4"
        android:layout_toEndOf="@+id/text4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intension"
        android:id="@+id/text4"
        android:textSize="20dp"
        android:layout_below="@+id/nameabout"
        android:layout_alignLeft="@+id/text3"
        android:layout_alignStart="@+id/text3"
        android:layout_marginTop="43dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_below="@id/nameabout"
        android:layout_toRightOf="@+id/text4"
        android:layout_marginLeft="5dp"
        android:layout_height="150dp"
        android:layout_alignRight="@+id/nameabout"
        android:layout_alignEnd="@+id/nameabout"
        android:id="@+id/textabout" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/sendabout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textabout"
        android:text="Send"/>


</RelativeLayout>